---
import "../styles/global.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lora&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Hush Harbor</title>
    <meta
      name="description"
      content="Escape the noise. Hush Harbor is a phone-free bar in Washington, DC where you can connect, unwind, and be fully present."
    />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://hushharbor.co/" />
  </head>
  <body class="bg-leafy-foreground">
    <slot />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
