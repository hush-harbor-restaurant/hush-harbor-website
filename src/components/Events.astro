---
import { sanityClient } from "sanity:client";

// Fetch the first uploaded eventsImage
const eventsImage = await sanityClient.fetch(`*[_id == "eventsImage"][0]{
  title,
  "src": image.asset->url,
  alt
}`);
---

<section id="events" class="px-8 pt-20 pb-20 bg-leafy-dark text-stone-200">
  <div class="mx-auto">
    <div class="grid lg:grid-cols-2 gap-10 items-center">
      <!-- Left: Text + Image -->
      <div class="flex flex-col self-center mx-auto max-w-xl w-full">
        <h1 class="text-4xl font-bold mb-4">Events</h1>
        {
          eventsImage?.src ? (
            <img
              src={eventsImage.src}
              alt={eventsImage.alt || eventsImage.title}
              class="w-full h-100 object-cover rounded-lg"
            />
          ) : (
            <div class="w-full h-100 bg-stone-200 rounded-lg flex items-center justify-center text-stone-500 text-sm">
              No image found
            </div>
          )
        }
        <p class="mb-4">
          Our carriage house is open with its very own bar and wood-burning
          fireplace. Rent this newly renovated space for your next big party.
        </p>
      </div>

      <!-- Right: Embedded Form -->
      <div class="w-full flex justify-center items-center flex-col">
        <p class="mb-4">
          Use the form to book a private room, rent the barn, or buy out the
          whole bar.
        </p>
        <div class="w-full max-w-[520px] h-[895px]">
          <iframe
            title="3c7bc528-b25c-4d32-bc8c-e8b87448c304"
            id="3c7bc528-b25c-4d32-bc8c-e8b87448c304"
            name="3c7bc528-b25c-4d32-bc8c-e8b87448c304"
            src="https://embed.perfectvenue.com/contact-form/0e84513faf?form-type=venue"
            class="w-full h-full bg-neutral-300 rounded-lg"
            style="border: none; overflow: hidden;"
            scrolling="no"
            allowfullscreen></iframe>
        </div>
      </div>
    </div>
  </div>
</section>
